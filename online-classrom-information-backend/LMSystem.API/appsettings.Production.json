{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "LMOnlineSystemDB": "${CONNECTION_STRING}"
  },

  "JWT": {
    "ValidAudience": "WebAPI",
    "ValidIssuer": "https://estudyhub.azurewebsites.net",
    "SecretKey": "${SECRET_KEY}",
    "TokenValidityInMinutes": 2400,
    "RefreshTokenValidityInDays": 7
  },

  "MailSettings": {
    "Mail": "estudyhubservices@gmail.com",
    "DisplayName": "eStudyHub Mail",
    "Password": "${MAIL_PASSWORD}",
    "Host": "smtp.gmail.com",
    "Port": 587
  },

  "PaypalOptions": {
    "Mode": "Sandbox",
    "ClientId": "${PAYPAL_CLIENT_ID}",
    "ClientSecret": "${PAYPAL_CLIENT_SECRET}"
  },

  "payOS": {
    "clientId": "${PAYOS_CLIENT_ID}",
    "apiKey": "${PAYOS_API_KEY}",
    "checksumKey": "${PAYOS_CHECKSUM}"
  }
}
